<div class="row">
  <div class="small-12 column"><h2>Welcome to Rainforest</h2></div>
  <div class="small-12 column"><p><%= link_to "Got a product you want to push?  Click here", new_product_path %></p></div>
</div>

<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
<div id="products">
  <%= render @products %>
</div>

<%= paginate @products %>